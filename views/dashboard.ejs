                            <thead>
                                <tr>
                                    <th>Tarea</th>
                                    <th>Proyecto</th>
                                    <th>Prioridad</th>
                                    <th>Deadline</th>
                                    <th>Estado</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <strong>Implementar dashboard</strong>
                                        <br>
                                        <small class="text-muted">Crear interfaz de usuario del dashboard</small>
