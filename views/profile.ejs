<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle me-2"></i>
                        Mi Perfil
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Información del perfil -->
                        <div class="col-md-4 text-center mb-4">
                            <div class="profile-avatar mb-3">
                                <i class="bi bi-person-circle display-1 text-primary"></i>
                            </div>
                            <h4><%= user.first_name %> <%= user.last_name %></h4>
                            <p class="text-muted">@<%= user.username %></p>
                            <p class="text-muted">
                                <i class="bi bi-envelope me-1"></i>
                                <%= user.email %>
                            </p>
                            <button class="btn btn-outline-primary">
                                <i class="bi bi-camera me-1"></i>
                                Cambiar Avatar
                            </button>
                        </div>
                        
                        <!-- Formulario de edición -->
                        <div class="col-md-8">
                            <form>
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <label for="first_name" class="form-label">Nombre</label>
                                        <input 
                                            type="text" 
                                            class="form-control" 
                                            id="first_name" 
                                            value="<%= user.first_name %>"
                                            readonly
                                        >
                                    </div>
                                    <div class="col-md-6">
                                        <label for="last_name" class="form-label">Apellido</label>
                                        <input 
                                            type="text" 
                                            class="form-control" 
                                            id="last_name" 
                                            value="<%= user.last_name %>"
                                            readonly
                                        >
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="username" class="form-label">Nombre de Usuario</label>
                                    <input 
                                        type="text" 
                                        class="form-control" 
                                        id="username" 
                                        value="<%= user.username %>"
                                        readonly
                                    >
                                </div>
                                
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input 
                                        type="email" 
                                        class="form-control" 
                                        id="email" 
                                        value="<%= user.email %>"
                                        readonly
                                    >
                                </div>
                                
                                <div class="mb-3">
                                    <label for="created_at" class="form-label">Miembro desde</label>
                                    <input 
                                        type="text" 
                                        class="form-control" 
                                        id="created_at" 
                                        value="<%= new Date(user.created_at).toLocaleDateString('es-ES', {
                                            year: 'numeric',
                                            month: 'long',
                                            day: 'numeric'
                                        }) %>"
                                        readonly
                                    >
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-primary">
                                        <i class="bi bi-pencil me-1"></i>
                                        Editar Perfil
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary">
                                        <i class="bi bi-key me-1"></i>
                                        Cambiar Contraseña
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Estadísticas del usuario -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up me-2"></i>
                        Estadísticas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="stat-item">
                                <h3 class="text-primary">5</h3>
                                <p class="text-muted mb-0">Proyectos</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="stat-item">
                                <h3 class="text-success">23</h3>
                                <p class="text-muted mb-0">Tareas Completadas</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="stat-item">
                                <h3 class="text-warning">8</h3>
                                <p class="text-muted mb-0">Tareas Pendientes</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="stat-item">
                                <h3 class="text-info">12</h3>
                                <p class="text-muted mb-0">Colaboraciones</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
