<!-- Hero Section -->
<section class="hero-section bg-gradient text-white">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">
                    Bienvenido a DisspaceWebApp
                </h1>
                <p class="lead mb-4">
                    La plataforma definitiva para gestión y colaboración en proyectos. 
                    Organiza, colabora y alcanza tus objetivos de manera eficiente.
                </p>
                <div class="d-grid gap-2 d-md-flex">
                    <% if (!locals.user) { %>
                        <a href="/auth/register" class="btn btn-light btn-lg px-4">
                            <i class="bi bi-person-plus me-2"></i>
                            Empezar Gratis
                        </a>
                        <a href="/auth/login" class="btn btn-outline-light btn-lg px-4">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Iniciar Sesión
                        </a>
                    <% } else { %>
                        <a href="/dashboard" class="btn btn-light btn-lg px-4">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Ir al Dashboard
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-icon">
                    <i class="bi bi-hexagon-fill display-1"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-lg-6 mx-auto">
                <h2 class="fw-bold mb-3">Características Principales</h2>
                <p class="lead text-muted">
                    Descubre las herramientas que te ayudarán a gestionar tus proyectos de manera más efectiva
                </p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-kanban-fill display-4 text-primary"></i>
                    </div>
                    <h4 class="fw-semibold mb-3">Gestión de Proyectos</h4>
                    <p class="text-muted">
                        Organiza y gestiona tus proyectos con tableros Kanban intuitivos y herramientas de seguimiento avanzadas.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-people-fill display-4 text-success"></i>
                    </div>
                    <h4 class="fw-semibold mb-3">Colaboración en Tiempo Real</h4>
                    <p class="text-muted">
                        Trabaja con tu equipo en tiempo real, comparte ideas y mantén a todos sincronizados en un solo lugar.
                    </p>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="feature-card text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="bi bi-graph-up-arrow display-4 text-warning"></i>
                    </div>
                    <h4 class="fw-semibold mb-3">Seguimiento de Progreso</h4>
                    <p class="text-muted">
                        Monitorea el avance de tus tareas y objetivos con reportes detallados y análisis en tiempo real.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-6 fw-bold text-primary">100+</h3>
                    <p class="text-muted">Proyectos Completados</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-6 fw-bold text-success">50+</h3>
                    <p class="text-muted">Equipos Activos</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-6 fw-bold text-warning">1000+</h3>
                    <p class="text-muted">Tareas Gestionadas</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-6 fw-bold text-info">24/7</h3>
                    <p class="text-muted">Soporte Disponible</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<% if (!locals.user) { %>
<section class="py-5">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <h2 class="fw-bold mb-3">¿Listo para comenzar?</h2>
                <p class="lead text-muted mb-4">
                    Únete a miles de equipos que ya están usando DisspaceWebApp para mejorar su productividad.
                </p>
                <a href="/auth/register" class="btn btn-primary btn-lg px-5">
                    <i class="bi bi-rocket-takeoff me-2"></i>
                    Crear Cuenta Gratis
                </a>
            </div>
        </div>
    </div>
